{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Test Socket",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=Socket",
                    "--package=voidio"
                ],
                "filter": {
                    "name": "Socket",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Test UdpServer",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=UdpServer",
                    "--package=voidio"
                ],
                "filter": {
                    "name": "UdpServer",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Test UdpServer in Drain Mode (Unix Only)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=XUdpServer_Drain",
                    "--package=voidio"
                ],
                "filter": {
                    "name": "XUdpServer_Drain",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Test UdpServer in XDP Mode (Root)",
            "program": "target/debug/XUdpServer_Xdp-latest",
            "initCommands": [
                "platform select remote-linux",
                "platform connect connect://127.0.0.1:54321",
            ],
            "args": [ "--nocapture" ],
            "preLaunchTask": "build_xudpserver_test_and_launch_lldbserver",
            "cwd": "${workspaceFolder}/target/debug"
        }
    ]
}